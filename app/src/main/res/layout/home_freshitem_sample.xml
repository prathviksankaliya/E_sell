<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3mdp"
    android:padding="@dimen/_4mdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3mdp"
        android:elevation="@dimen/_48mdp"
        app:cardCornerRadius="@dimen/_16mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/litewhite">

            <ImageView
                android:id="@+id/igSampleHomeFreshItem"
                android:layout_width="@dimen/_150mdp"
                android:layout_height="@dimen/_155mdp"
                android:scaleType="fitXY"
                android:src="@drawable/testing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/igHomeLike"
                android:layout_width="@dimen/_24mdp"
                android:layout_height="@dimen/_24mdp"
                android:layout_marginEnd="@dimen/_3mdp"
                android:padding="@dimen/_2mdp"
                android:src="@drawable/like"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/txSampleHomeFreshItemLocation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txSampleHomeFreshItemName" />

            <TextView
                android:id="@+id/txSampleHomeFreshItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6mdp"
                android:layout_marginTop="@dimen/_6mdp"
                android:fontFamily="@font/roboto"
                android:text="@string/price"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_13font_mdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/igSampleHomeFreshItem" />

            <TextView
                android:id="@+id/txSampleHomeFreshItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4mdp"
                android:layout_marginEnd="@dimen/_2mdp"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:text="I Phone 11 Pro navpo aayo ae ho ala apple no"
                android:textSize="@dimen/_11font_mdp"
                app:layout_constraintEnd_toStartOf="@+id/igHomeLike"
                app:layout_constraintStart_toStartOf="@+id/txSampleHomeFreshItemPrice"
                app:layout_constraintTop_toBottomOf="@+id/txSampleHomeFreshItemPrice" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_15mdp"
                android:layout_height="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_3mdp"
                android:layout_marginBottom="@dimen/_3mdp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_location_on_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txSampleHomeFreshItemName"
                app:layout_constraintTop_toBottomOf="@+id/txSampleHomeFreshItemName" />

            <TextView
                android:id="@+id/txSampleHomeFreshItemLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4mdp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Limbdi"
                android:textSize="@dimen/_9font_mdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintEnd_toStartOf="@+id/igHomeLike"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>