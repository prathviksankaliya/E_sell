<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Fragment.login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/IvesellIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white1"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toTopOf="@id/btnContinueWithPhone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:visibility="visible"
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white1"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:padding="@dimen/_10mdp"
                android:text="Continue with Email"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/btnContinueWithPhone"
                app:layout_constraintStart_toStartOf="@+id/btnContinueWithPhone"
                app:layout_constraintTop_toBottomOf="@id/btnContinueWithPhone" />

            <Button
                android:visibility="gone"
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white1"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:padding="@dimen/_10mdp"
                android:text="SignUp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/btnContinueWithPhone"
                app:layout_constraintStart_toStartOf="@+id/btnContinueWithPhone"
                app:layout_constraintTop_toBottomOf="@id/btnContinueWithPhone" />

            <Button
                android:id="@+id/btnContinueWithPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white1"
                android:drawableLeft="@drawable/phone_icon"
                android:padding="@dimen/_10mdp"
                android:text="Continue with Phone"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/btnContinueWithGoogle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/IvesellIcon"
                android:visibility="visible"/>



            <Button
                android:id="@+id/btnContinueWithGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white1"
                android:drawableLeft="@drawable/ic_google"
                android:padding="@dimen/_10mdp"
                android:text="Continue With Google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/btnContinueWithPhone"
                app:layout_constraintStart_toStartOf="@+id/btnContinueWithPhone"
                app:layout_constraintTop_toBottomOf="@id/btnContinueWithPhone"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="If you continue, you are accepting  Terms and Conditions and Privacy Policy"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnContinueWithGoogle" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>